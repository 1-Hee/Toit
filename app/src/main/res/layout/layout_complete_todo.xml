<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <import type="android.view.View"/>
        <variable
            name="click"
            type="com.one.toit.base.listener.ViewClickListener" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        tools:background="@color/white"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_complete_desc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인증 사진을 남겨볼까요?"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textFontWeight="900"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_complete_desc2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_complete_desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목표 달성시 다이얼로그 창에서\n촬영한 사진을 확인할 수 있어요!"
            android:textSize="16sp"
            android:textColor="@color/purple300"
            android:includeFontPadding="false"
            android:textFontWeight="900"
            app:layout_constraintTop_toBottomOf="@id/tv_complete_desc1"
            app:layout_constraintBottom_toTopOf="@id/tv_complete_desc3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_complete_desc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단, 목표 완료 후에는 사진 수정이 어려우니,\n완료 전에 사진을 다시 한번 확인해주세요."
            android:textSize="10sp"
            android:textColor="@color/mono500"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/tv_complete_desc2"
            app:layout_constraintBottom_toTopOf="@id/cv_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            />
        
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_photo"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:strokeColor="@color/purple200"
            app:strokeWidth="4dp"
            app:rippleColor="@color/purple100"
            app:cardBackgroundColor="@color/none"
            app:layout_constraintTop_toBottomOf="@id/tv_complete_desc3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="32dp"
            android:onClick="@{(v)->click.onViewClick(v)}"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:tint="@color/purple200"
                    android:backgroundTint="@color/purple200"
                    android:scaleType="fitCenter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tv_photo"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사진 촬영 하기"
                    android:textSize="11sp"
                    android:textColor="@color/purple200"
                    android:textFontWeight="900"
                    android:includeFontPadding="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_photo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
